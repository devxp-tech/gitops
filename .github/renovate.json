{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":reviewer(diegoluisi)"
  ],
  "ignorePaths": [
    "apps/**/base/kustomization.yaml",
    "apps/**/overlays/prd/kustomization.yaml"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "kustomize": {
    "groupName": "kustomize",
    "description": "Kustomization Files",
    "enabled": true,
    "automerge": true,
    "fileMatch": [
      "(^|/)kustomization\\.ya?ml$"
    ]
  },
  "pinDigests": true
}