{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "github-actions",
      "description": "GitHub Actions Dependencies",
      "enabled": true,
      "matchPaths": [
        ".github/workflows/*.yaml"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "paths": [
        "apps/**/overlays/dev/kustomization.yaml"
      ],
      "enabled": true
    }
  ],
  "argocd": {
    "groupName": "argocd",
    "description": "ArgoCD Autopilot",
    "enabled": true,
    "fileMatch": [
      "bootstrap/argo-cd/.+\\.yaml$"
    ]
  },
  "kustomize": {
    "groupName": "kustomize",
    "description": "Kustomization Files",
    "enabled": true,
    "automerge": true,
    "fileMatch": [
      "apps/**/overlays/dev/(^|/)kustomization\\.ya?ml$"
    ]
  },
  "pinDigests": true
}